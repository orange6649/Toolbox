<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@mipmap/qq7"
    tools:context=".UI.Secure_ui.Safety_and_AdviceActivity">

    <!-- 返回按钮 -->
    <ImageView
        android:id="@+id/imageView_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_gravity="start"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 安全建议标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="安全建议"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- 安全建议内容 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. 使用强密码并定期更改。\n\n2. 启用双重身份验证。\n\n3. 将系统和应用程序保持最新状态。\n\n4. 谨慎安装第三方应用。"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="32dp"/>

            <!-- 其他安全相关内容标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="其他安全相关内容"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- 其他安全相关内容 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. 常见安全威胁：网络钓鱼、恶意软件等。\n\n2. 网络安全常识：密码安全、隐私保护等。\n\n3. 安全操作指南：安全登录、安全购物、安全上网等。\n\n4. 应急响应方案：账号被盗、信息泄露等情况应对策略。\n\n5. 安全技术趋势：最新安全技术发展趋势。\n\n6. 常见问题解答：解决常见安全问题的方法。\n\n7. 安全资源链接：安全网站、安全论坛等。\n\n8. 用户反馈与建议：提供反馈渠道。"
                android:textSize="16sp"
                android:lineSpacingExtra="8dp"
                android:layout_marginBottom="32dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
