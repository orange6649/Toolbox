<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@mipmap/qq7"
    tools:context="UI.Secure_ui.AccountStatusActivity">

    <!-- 返回按钮和账号状态 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/imageView_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_marginTop="1dp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号状态"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="118dp"
            android:layout_marginTop="1dp"/>


    </LinearLayout>

    <!-- 账号状态 -->
    <TextView
        android:id="@+id/textViewAccountStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号状态：正常"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="110dp"
        android:layout_marginTop="1dp"/>


    <!-- 账号登录历史 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 文本视图 -->
        <TextView
            android:id="@+id/textViewLoginHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="账号登录历史："
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="0dp"/>

        <!-- 图片按钮 -->
        <ImageButton
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- 登录历史列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLoginHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

</LinearLayout>
